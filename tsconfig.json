{
	"compilerOptions": {
	"target": "es6",
	"moduleResolution": "node",
	"baseUrl": "./",
	"outDir": "./",
	"sourceMap": true,
	"esModuleInterop": true,
	"lib": [
		"es2018",
		"dom"
	],
	"allowJs": true,
	"skipLibCheck": true,
	"strict": false,
	"forceConsistentCasingInFileNames": true,
	"isolatedModules": true,
	"jsx": "preserve",
	"noImplicitAny": true,
	"resolveJsonModule": true,
	"strictNullChecks": true,
	"emitDecoratorMetadata": true,
	"experimentalDecorators": true,
	"module": "commonjs",
	"noEmit": false
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}
